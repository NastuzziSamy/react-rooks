{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es6", "dom", "es2016", "es2017", "es2015"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "react-rooks": ["../index.tsx"],
      "react-rooks/zod": ["../index-zod.tsx"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
